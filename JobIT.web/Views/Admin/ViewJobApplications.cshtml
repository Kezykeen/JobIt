@model IEnumerable<JobIT.web.Models.JobApplications>

@{
    ViewBag.Title = "ViewJobApplications";
    var count = 0;
}

<div class="container mt-3">
    <h2>View all Applications on this Job</h2>
    <table class="table">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Job Title</th>
            <th>Company</th>
            <th>Status</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{var current = ++count;}@count
                </td>
                <td>
                    @item.FirstName @item.LastName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("View Application", "ViewApplication", "Admin", new { id = @item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
                        }

    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#openSideNav").click(function () {
                $(".sidenav").toggleClass("active");
            });

            $("#closeSideNav").click(function () {
                $(".sidenav").toggleClass("active");
            });
        })
    </script>
}
