@model IEnumerable<JobIT.web.Models.Job>

@{
    ViewBag.Title = "Index";
}

<div class="job-index-header text-center">
    <div></div>
    <h1>First step to acquiring that dream job</h1>
</div>

@foreach (var item in Model)
{
<div class="job-card">
    <div class="card-start">
        <div class="title">
            <h3>@Html.ActionLink(@item.Title, "Details", new { id = item.Id })</h3>
            <span class="tag">@item.JobType.Name</span>
        </div>
        <div class="meta">
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
                    <path fill="none" d="M0 0h24v24H0z" />
                    <path d="M7 5V2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1v3h4a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h4zM4 16v3h16v-3H4zm0-2h16V7H4v7zM9 3v2h6V3H9zm2 8h2v2h-2v-2z" />
                </svg>

                <span class="meta-text">@item.Company. </span>
            </div>

            <div>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
                    <path fill="none" d="M0 0h24v24H0z" />
                    <path d="M12 20.9l4.95-4.95a7 7 0 1 0-9.9 0L12 20.9zm0 2.828l-6.364-6.364a9 9 0 1 1 12.728 0L12 23.728zM12 13a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0 2a4 4 0 1 1 0-8 4 4 0 0 1 0 8z" />
                </svg>
                <span class="meta-text">@item.Location </span>
            </div>
        </div>
    </div>

    <div class="card-end">
        @Html.ActionLink("Apply", "Create", "JobApplications", new { jobId = item.Id }, new { @class = "btn btn-primary button"})
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#openSideNav").click(function () {
                $(".sidenav").toggleClass("active");
            });

            $("#closeSideNav").click(function () {
                $(".sidenav").toggleClass("active");
            });
        })
    </script>
}